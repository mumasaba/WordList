<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.qualitycyberservices.android.wordlist">

    <uses-sdk tools:overrideLibrary="android.support.v7.recyclerview, android.support.coreui, android.support.compat" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WordListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".WordsActivity"
            android:parentActivityName=".WordListActivity">

        </activity>

        <activity
            android:name=".WordDetailActivity"
            android:parentActivityName=".WordsActivity">

        </activity>

    </application>

</manifest>